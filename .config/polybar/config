[settings]
screenchange-reload = true

[colors]
color0  = ${xrdb:color0:#000000}
color1  = ${xrdb:color1:#FF0000}
color2  = ${xrdb:color2:#10FF10}
color3  = ${xrdb:color3:#DDD}
color4  = ${xrdb:color4:#0000FF}
color5  = ${xrdb:color5:#DDD}
color6  = ${xrdb:color6:#1010FF}
color7  = ${xrdb:color7:#AAAAAA}
color8  = ${xrdb:color8:#444444}
color9  = ${xrdb:color9:#FF1010}
color10 = ${xrdb:color10:#00FF00}
color11 = ${xrdb:color11:#DDD}
color12 = ${xrdb:color12:#DDD}
color13 = ${xrdb:color13:#DDD}
color14 = ${xrdb:color14:#DDD}
color15 = ${xrdb:color15:#FFFFFF}

black = ${colors.color0}
gray = ${colors.color8}
light_gray = ${colors.color7}
white = ${colors.color15}
primary = ${colors.color12}
alert = ${colors.color1}

[bar/default]
monitor = ${env:POLYBAR_MONITOR}
dpi = ${xrdb:Xft.dpi:}
width = 100%
height = 18 
radius = 0.0
fixed-center = true
bottom = true

background = ${colors.black}
foreground = ${colors.white}

underline-size = 3
overline-size = 3

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 0
font-0 = "Dejavu Sans:pixelsize=10;2"
font-1 = "Dejavu Sans Mono:pixelsize=10;2"

modules-left = powermenu i3
modules-center = xwindow
modules-right = wlan eth pulseaudio xbacklight xkeyboard filesystem memory cpu temperature battery date
;modules-right = filesystem xbacklight alsa pulseaudio xkeyboard memory cpu wlan eth battery temperature date powermenu

tray-padding = 2
tray-background = ${colors.black}

cursor-click = pointer

# -[BAR SETTINGS]-----------------------

# Primary
[bar/primary]
inherit = bar/default
tray-position = right

# Secondary
[bar/secondary]
inherit = bar/default
tray-position = none

# Settings CLAMP
[settings/clamp]
height = 22
temperature/hwmon-path = "/sys/devices/platform/coretemp.0/hwmon/hwmon5/temp1_input"

# Settings ENDE
[settings/ende]
dpi = 96
temperature/hwmon-path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input"

# Primary ende
[bar/primary_ende]
inherit = settings/ende bar/primary

# Secondary ende
[bar/secondary_ende]
inherit = settings/ende bar/secondary

# Primary clamp
[bar/primary_clamp]
inherit = settings/clamp bar/primary

# Secondary clamp
[bar/secondary_clamp]
inherit = settings/clamp bar/secondary

# -[MODULES]----------------------------

[module/xwindow]
type = internal/xwindow
label = " %title:0:70:...% "
format = <label>
format-background = ${colors.black}

[module/xkeyboard]
type = internal/xkeyboard

indicator-icon-default = some-icon
indicator-icon-0 = scroll lock;S;S
indicator-icon-1 = num lock;N;N
indicator-icon-2 = caps lock;C;C

format = <label-layout>

label-layout = %layout%
label-layout-underline = ${colors.color6}

label-indicator-on = %icon%
label-indicator-off = %icon%
label-indicator-on-background = ${colors.primary}
label-indicator-on-foreground = ${colors.black}
label-indicator-on-underline = ${colors.black}

[module/filesystem]
type = internal/fs
interval = 25
spacing = 1

mount-0 = /
mount-1 = /media/blue

label-mounted = %free%
label-mounted-underline = ${colors.color5}
format-mounted = %{A3:thunar:}<label-mounted>%{A}

label-unmounted = U
label-unmounted-foreground = ${colors.light_gray}
label-unmounted-underline = ${self.label-mounted-underline}

format-unmounted = <label-unmounted>

[module/i3]
type = internal/i3
index-sort = true
wrapping-scroll = false
enable-click = true
strip-wsnumbers = true
# Only show workspaces on the same output as the bar
pin-workspaces = true

format = <label-state> <label-mode>

label-mode-padding = 2
label-mode-foreground = ${colors.primary}
label-mode-background = ${colors.black}

# focused = Active workspace on focused monitor
label-focused = %name%
label-focused-padding = 2
label-focused-background = ${colors.gray}
label-focused-underline= ${colors.primary}

# unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = ${self.label-focused-padding}

# visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-padding = ${self.label-focused-padding}
label-visible-background = ${colors.black}
label-visible-underline = ${colors.gray}

# urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = ${self.label-focused-padding}

# Separator in between workspaces
label-separator = ""


[module/xbacklight]
type = internal/xbacklight
enable-scroll = false

label = %{T2}%percentage:3%%{T-}%
format = "%{A1: :}%{A4:brightnessctl -n1 set 5%+:}%{A5:brightnessctl -n1 set 5%-:}<label> <bar>%{A}%{A}%{A}"

bar-width = 11
bar-indicator = "|"
bar-indicator-foreground = ${colors.white}
bar-fill = "|"
bar-fill-foreground = ${colors.color14}
bar-empty = "|"
bar-empty-foreground = ${colors.gray}

[module/cpu]
type = internal/cpu
interval = 2.0

label = %{T2}%percentage:3%%{T-}%
label-underline = ${colors.color2}
format = %{A3:xfce4-terminal -e htop:}<label>%{A}

[module/memory]
type = internal/memory
interval = 2.0

label = %{T2}%percentage_used:3%%{T-}%
label-underline = ${colors.color6}
format = <label>

[module/wlan]
type = internal/network
interface = wlan0
interval = 2.0

label-connected = ↑%upspeed% ↓%downspeed%%{-u} %{+u}%essid%
label-connected-underline = ${colors.color3}
format-connected = <label-connected> <ramp-signal>

label-disconnected = "W"
label-disconnected-foreground = ${colors.light_gray}
label-disconnected-underline = ${self.label-connected-underline}
format-disconnected = <label-disconnected>

ramp-signal-0 = " "
ramp-signal-1 = "░"
ramp-signal-2 = "▒"
ramp-signal-3 = "▓"
ramp-signal-4 = "█"
ramp-signal-foreground = ${self.label-connected-underline}
ramp-signal-underline = ${self.label-connected-underline}

[module/eth]
type = internal/network
interface = enp3s0
interval = 2.0

format-connected-underline = ${colors.color3}
format-connected-prefix =
format-connected-prefix-foreground = ${colors.color10}
format-connected = <label-connected>
label-connected = ↑%upspeed% ↓%downspeed%

format-disconnected-prefix-foreground = ${colors.color10}
format-disconnected = "E"

# DATE
[module/date]
type = internal/date
interval = 5

date = "%H:%M"
date-alt = "%W%{-u} %{+u}%Y.%m.%d%{-u} %{+u}%H:%M:%S"

label = "%date%"
label-underline = ${colors.color4}

# PULSEAUDIO
[module/pulseaudio]
type = internal/pulseaudio

label-volume = %{T2}%percentage:3%%{T-}%
format-volume = <label-volume> <bar-volume>

label-muted = ${self.label-volume}

format-muted = <label-muted> %{R}|:::::::::|
format-muted-foreground = ${colors.alert}
format-muted-overline = ${root.background}

bar-volume-width = 11
bar-volume-foreground-0 = ${colors.color10}
bar-volume-foreground-1 = ${colors.color10}
bar-volume-foreground-2 = ${colors.color10}
bar-volume-foreground-3 = ${colors.color11}
bar-volume-foreground-4 = ${colors.color1}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-fill = |
bar-volume-empty = |
bar-volume-empty-foreground = ${colors.gray}
click-right = "pavucontrol"


# BATTERY
[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 100
interval = 5.0
time-format = "%_H:%M"

discharging-color = ${colors.color3}
charging-color = ${colors.color2}

# Discharging
label-discharging = "%{T2}%percentage:3%%{T-}%%{-u} %{+u}%time%"
#format-discharging = %{T2}<ramp-capacity>%{T-}<label-discharging>
format-discharging = <ramp-capacity>%{-u} %{+u}<label-discharging>
format-discharging-underline = "${self.discharging-color}"

# Charging
label-charging = ${self.label-discharging}
label-charging-underline = ${self.charging-color}
label-charging-foreground = ${self.charging-color}
format0charging = ⚡<ramp-capacity>%{-u} %{+u}<label-discharging>
format-charging-underline = ${self.charging-color}

# Full (over 90)
format-full = %{R}%{T2}⚡100%%{T-}%{-u} %{+u}FULL
format-full-underline = ${self.charging-color}
format-full-foreground = ${self.charging-color}

# Ramp
ramp-capacity-foreground = ${self.discharging-color}
ramp-capacity-0  = "          "
ramp-capacity-1  = "|         "
ramp-capacity-2  = "||        "
ramp-capacity-3  = "|||       "
ramp-capacity-4  = "||||      "
ramp-capacity-5  = "|||||     "
ramp-capacity-6  = "||||||    "
ramp-capacity-7  = "|||||||   "
ramp-capacity-8  = "||||||||  "
ramp-capacity-9  = "||||||||| "
ramp-capacity-10 = "||||||||||"

[module/temperature]
type = internal/temperature
hwmon-path = ${root.temperature/hwmon-path}
thermal-zone = 0
warn-temperature = 69

label = %temperature-c:4%
label-underline = ${colors.color1}
format = <label>

label-warn = %temperature-c:4%
label-warn-foreground = ${colors.alert}
label-warn-underline = ${self.label-underline}
format-warn = <label-warn>

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = " "
label-close = " X"
label-separator = |
label-separator-foreground = ${colors.color10}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2
menu-0-2 = log out
menu-0-2-exec = menu-open-3

menu-1-0 = yes
menu-1-0-exec = systemctl reboot
menu-1-1 = no
menu-1-1-exec = menu-open-0

menu-2-0 = yes
menu-2-0-exec = systemctl poweroff
menu-2-1 = no
menu-2-1-exec = menu-open-0

menu-3-0 = yes
menu-3-0-exec = i3-msg exit
menu-3-1 = no
menu-3-1-exec = menu-open-0

[global/wm]
margin-top = 5
margin-bottom = 5

